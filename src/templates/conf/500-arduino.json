{
  "handler": "arduino",

  "repositories": ["target"],

  "dist": {
    "template": "arduino"
  },

  "themes": {
    "icons": ["default"],
    "styles": ["material"],
    "sounds": [],
    "fonts": ["Karla"]
  },

  "client" : {
    "Version" : "2.0-alpha71-arduino-os",

    "Languages": {
      "en_EN": "English"
    },

    "Connection": {
      "APIURI": "/cgi-bin/osjs-api",
      "FSURI":  "/cgi-bin/osjs-fs?path="
    },

    "AutoStart": ["ArduinoService"],
    "ShowQuitWarning": true,

    "VFS": {
      "MaxUploadSize": 1073741824,
      "Mountpoints": {
        "shared": {
          "enabled": false
        },
        "root": {
          "description": "Arduino Storage"
        }
      }
    },

    "WM" : {
      "args": {
        "defaults": {
          "icon"            : "arduino-osjs.png",
          "wallpaper"       : "osjs:///themes/wallpapers/arduino-infinite-boards.jpg",
          "backgroundColor" : "#ebebeb",
          "theme"           : "material",
          "icons"           : "default",
          "sounds"          : "default",
          "background"      : "image-center",
          "enableSounds"    : false
        }
      }
    }
  },

  "server" : {
    "debugmode": false,
    "tmpdir": "/tmp",
    "vfs": {
      "mounts": {
        "root": "/"
      }
    }
  },

  "locales": [
    "src/client/javascript/locales/en_EN.js"
  ]
}
